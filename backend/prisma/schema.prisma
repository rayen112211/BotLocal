generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Business {
  id                   String         @id @default(uuid())
  email                String         @unique
  password             String
  name                 String
  websiteUrl           String?
  phone                String?        @unique
  telegramBotToken     String?
  telegramBotUsername  String?
  language             String?        @default("en")
  plan                 String         @default("Starter")
  industry             String?        @default("General")
  botPersonality       String         @default("Professional & Friendly")
  customInstructions  String?        @default("Be helpful and try to assist the customer with their needs.")
  stripeCustomerId     String?
  messageCount         Int            @default(0)
  lastMessageAt        DateTime?      // Track last incoming message for diagnostics
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt

  knowledgeBases       KnowledgeBase[]
  conversations        Conversation[]
  bookings             Booking[]
  notifications        Notification[]
  paymentEvents        PaymentEvent[]
}

model KnowledgeBase {
  id         String   @id @default(uuid())
  businessId String
  url        String?
  content    String   // The text extracted from the URL
  pagesScanned Int?      @default(1)
  embedding  String?  // JSON string array representing the vector
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
}

model Conversation {
  id            String   @id @default(uuid())
  businessId    String
  customerPhone String
  messages      String   // JSON string of all messages { role, content }
  isAiEnabled    Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
}

model Booking {
  id            String   @id @default(uuid())
  businessId    String
  customerPhone String
  customerName  String
  date          DateTime
  time          String
  serviceType   String?  @default("General Service")
  notes         String?
  status        String   @default("pending") // pending, completed, cancelled
  reviewSent    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
}

// ===========================================
// RELIABILITY LAYER - Notifications & Events
// ===========================================

// User notifications for trust & feedback
model Notification {
  id         String   @id @default(uuid())
  businessId String
  type       String   // "success", "error", "info", "payment", "bot_status"
  title      String
  message    String
  read       Boolean  @default(false)
  createdAt  DateTime @default(now())

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
}

// Payment events for idempotency (Stripe webhooks) - businessId optional until we resolve it from event
model PaymentEvent {
  id            String   @id @default(uuid())
  businessId    String?
  stripeEventId String   @unique // Stripe's unique event ID for idempotency
  type          String   // "checkout.completed", "subscription.deleted", etc.
  amount        Int?     // Amount in cents
  plan          String?
  status        String   // "processed", "failed"
  rawEvent      String?  // JSON string of full Stripe event for debugging
  createdAt     DateTime @default(now())

  business Business? @relation(fields: [businessId], references: [id], onDelete: Cascade)
}
